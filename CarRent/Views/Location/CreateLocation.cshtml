@model CreateLocationCommand
@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">Lokasyon Ekle</h2>
            <div class="card">
                <div class="card-header">
                    Yeni Lokasyon Ekle
                </div>
                <div class="card-body">
                    <form method="post">

                        <div class="form-group">
                            <label for="model">Lokasyon:</label>
                            <input type="text" class="form-control" id="model" asp-for="LocationName" required>
                        </div>


                        <button type="submit" class="btn btn-primary">Lokasyon Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


